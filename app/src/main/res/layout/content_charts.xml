<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.nadod.evolution.ChartsActivity"
    tools:showIn="@layout/activity_charts">

    <LinearLayout
        android:id="@+id/llCharts"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llWeightDimensions"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Peso"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cvWeight"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:background="#FFFFFF"
                card_view:cardCornerRadius="5dp">

                <com.db.chart.view.LineChartView
                    android:id="@+id/weightChart"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWaistDimensions"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvWaist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Cintura"/>

            <android.support.v7.widget.CardView
                android:id="@+id/cvWaistChart"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_margin="2dp"
                android:background="#FFFFFF"
                card_view:cardCornerRadius="5dp">

                <com.db.chart.view.LineChartView
                    android:id="@+id/waistChart"
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />

            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
